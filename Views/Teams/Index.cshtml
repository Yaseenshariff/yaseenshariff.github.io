@model IEnumerable<SpanishFootballLeague.Models.TeamsDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<div class="row">

    @foreach (var item in Model)
    {
        <div class="square">
            @{
                var base64 = Convert.ToBase64String(item.TeamImage);
                var imgsrc = string.Format("data:image/png;base64,{0}", base64);
            }
            <a href="@Url.Action("GetTeamInfoByTeamId", "Teams", new { item.TeamId})">
                <img src='@imgsrc' style="width:170px; height:170px;" />
            </a>
            <div class="name">
                @Html.DisplayFor(modelItem => item.TeamName)
            </div>
            <div class="name">
                @Html.DisplayFor(modelItem => (item.TeamShortName))
            </div>
        </div>
    }
</div>

<style>

    .name {
        text-align: center;
        font-size: 20px;
    }

    .square {
        margin-top: 50px;
